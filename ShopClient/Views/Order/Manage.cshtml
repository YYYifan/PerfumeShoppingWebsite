@using ShopClient.Models.Clients
@using ShopClient.Models
@{
    ViewData["Title"] = "Manage";
}
@inject ShopClient.Models.Clients.UserClient uc
@inject ShopClient.Models.Clients.OrderClient oc
<h1>Manage</h1>

<ul>
    @if(null!= await oc.GetOrderByIdAsync(uc.GetCurrentUser().Id)) {
    @foreach (Order o in await oc.GetOrderByIdAsync(uc.GetCurrentUser().Id))
    {
    <li>
        <h2>Order Id:@o.Id</h2>
    </li>
    }
    }
</ul>


